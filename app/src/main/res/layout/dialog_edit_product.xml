<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/dialog_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_scan_product2"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:pointerIcon="none"
                android:src="@drawable/barcodescan"
                android:text="Scan Product" />

            <TextView
                android:id="@+id/scanText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_product_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Nom du produit"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>


        <EditText
            android:id="@+id/edit_product_prix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Prix"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edit_produit_description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Description"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="154dp"
            android:layout_height="109dp"
            android:layout_gravity="center"

            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/modifierImageProduit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/grey"
            android:text="image"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_confirm2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/black"
            android:text="Modifier"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cancel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/red"
            android:text="Annuler"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>
