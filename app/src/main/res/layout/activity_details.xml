<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageViewProduit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/splash"
        android:contentDescription="Image du produit"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textViewNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du produit"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewPrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix: 0 DH"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description du produit"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingTop="8dp"
        android:maxLines="3"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/textViewCategorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CatÃ©gorie"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingTop="8dp" />

    <RadioGroup
        android:id="@+id/radioGroupOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <RadioButton
            android:id="@+id/radioSizeSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Petit" />

        <RadioButton
            android:id="@+id/radioSizeMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Moyen" />

        <RadioButton
            android:id="@+id/radioSizeLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Grand" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBoxFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingTop="16dp"
        android:text="Ajouter aux favoris" />

</LinearLayout>
